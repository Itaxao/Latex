@article{complexitas6633,
	author = {Mariana Mello e Everton Camillo e Beatriz dos Santos},
	title = {BIG DATA E INTELIGÊNCIA ARTIFICIAL: ASPECTOS ÉTICOS E LEGAIS MEDIANTE A TEORIA CRÍTICA},
